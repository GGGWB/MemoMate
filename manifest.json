{
    "manifest_version": 3,
    "name": "侧边栏剪贴板记录器",
    "version": "1.0",
    "description": "自动读取剪贴板内容并以Markdown格式保存",
    "permissions": [
      "storage",
      "sidePanel",
      "clipboardRead"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "action": {
      "default_title": "侧边栏剪贴板记录器",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    },
    "background": {
      "service_worker": "background.js",
      "type": "module"
    }
  }